<div class="max-w-4xl mx-auto mt-10 bg-white shadow-lg rounded-2xl p-6">
    <h1 class="text-3xl font-bold text-center text-pink-600 mb-6">üõí Tu carrito de compras</h1>

    {{#if products.length}}
        <table class="w-full table-auto border-collapse">
        <thead>
            <tr class="text-left bg-pink-100 text-pink-800">
            <th class="py-2 px-4">Producto</th>
            <th class="py-2 px-4">Precio</th>
            <th class="py-2 px-4">Cantidad</th>
            <th class="py-2 px-4">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr class="border-t text-gray-700">
                <td class="py-2 px-4">{{this.product.title}}</td>
                <td class="py-2 px-4">$ {{this.product.price}}</td>
                <td class="py-2 px-4">{{this.quantity}}</td>
                <td class="py-2 px-4">$ {{multiply this.product.price this.quantity}}</td>
            </tr>
            {{/each}}
        </tbody>
        </table>

        <div class="text-right mt-6 text-lg font-semibold text-gray-800">
        Total: $
        {{total products}}
        </div>
    {{else}}
        <p class="text-center text-gray-600">Tu carrito est√° vac√≠o.</p>
    {{/if}}

    <div class="text-center mt-6">
        <a href="/products" class="text-blue-600 hover:underline text-sm">‚Üê Seguir comprando</a>
    </div>
</div>
