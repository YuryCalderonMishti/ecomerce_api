{{> header title="Lista de productos"}}

<h1 class="text-2xl font-bold mb-4 text-center">Lista de productos</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-4">
    {{#each products}}
        <div class="bg-white shadow-md rounded-2xl p-4">
        <h2 class="text-xl font-semibold">{{title}}</h2>
        <p class="text-gray-700 mb-2">{{description}}</p>
        <p class="text-pink-600 font-bold mb-1">$ {{price}}</p>
        <p class="text-sm text-gray-500">Categoría: {{category}}</p>
        <p class="text-sm text-gray-500">Stock: {{stock}}</p>
        </div>
    {{/each}}
</div>

<div class="flex justify-center mt-6 space-x-4">
    {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}" class="bg-pink-500 hover:bg-pink-600 text-white px-4 py-2 rounded-lg">Anterior</a>
    {{/if}}

    <span class="px-4 py-2 text-gray-700">Página {{currentPage}}</span>

    {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}" class="bg-pink-500 hover:bg-pink-600 text-white px-4 py-2 rounded-lg">Siguiente</a>
    {{/if}}
    </div>

{{> footer }}
